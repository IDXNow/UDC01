{
  "default_provider": "local",
  "default_model": "openai/gpt-oss-20b",
  "default_endpoint": "v1/chat/completions",
  "default_temperature": 1,
  "max_retries": 3,
  "api_timeout": 600,
  "api_retry_attempts": 3,
  "api_retry_backoff": 2,
  "parallel_agents": true,
  "max_parallel_workers": 2,
  "log_details": true,
  "providers": {
    "local": {
      "base_url": "http://localhost:1234",
      "endpoint": "v1/chat/completions",
      "auth_header": null,
      "request_format": "openai"
    },
    "openai": {
      "base_url": "https://api.openai.com",
      "endpoint": "v1/chat/completions",
      "auth_header": "Authorization",
      "auth_prefix": "Bearer",
      "request_format": "openai"
    },
    "anthropic": {
      "base_url": "https://api.anthropic.com",
      "endpoint": "v1/messages",
      "auth_header": "x-api-key",
      "auth_prefix": "",
      "version_header": "anthropic-version",
      "version": "2023-06-01",
      "request_format": "anthropic"
    },
    "google": {
      "base_url": "https://generativelanguage.googleapis.com",
      "endpoint": "v1beta/models/{model}:generateContent",
      "auth_header": "x-goog-api-key",
      "auth_prefix": "",
      "request_format": "google"
    }
  },
  "api_keys": {
    "openai": "${OPENAI_API_KEY}",
    "anthropic": "${ANTHROPIC_API_KEY}",
    "google": "${GOOGLE_API_KEY}"
  },
  "file_load": {
    "default_file": "samples/sources/sales_invoice.csv",
    "folder": "samples/sources/",
    "search_pattern": "*.csv"
  },
  "file_save": {
    "folder": "output/",
    "file_extension": "txt"
  },
  "log_file":{
    "folder": "logs/",
    "file_extension": "log"
  },
  "agents": {
    "data_verifier": [
      {
        "name": "Jane Dirac",
        "role": "verify",
        "instructions": "data_verification_system_msg",
        "request_instructions": "data_verification_request_msg"
      },
      {
        "name": "Chris Einstein",
        "role": "verify",
        "instructions": "data_verification_system_msg",
        "request_instructions": "data_verification_request_msg"
      },
      {
        "name": "Nathan Fourier",
        "role": "verify",
        "temperature": 1,
        "instructions": "data_verification_system_msg",
        "request_instructions": "data_verification_request_msg"
      }
    ],
    "data_conversion": {
      "name": "Ted Sagan",
      "role": "convert",
      "provider": "anthropic",
      "model": "claude-sonnet-4-5"
    },
    "data_validator": [
      {
        "name": "Charles Turing",
        "role": "validate",
        "instructions": "data_validation_system_msg",
        "request_instructions": "data_validation_request_msg"
        
      },
      {
        "name": "Macy Hopper",
        "role": "validate",
        "temperature": 1,
        "instructions": "data_validation_system_msg",
        "request_instructions": "data_validation_request_msg"
      },
      {
        "name": "Vanessa Lovelace",
        "role": "validate",
        "instructions": "data_validation_system_msg",
        "request_instructions": "data_validation_request_msg"
      }
    ],
    
    "log_message_router": {
      "name": "Bob Newton",
      "role": "route",
      "instructions": "log_message_routing_system_msg",
      "request_instructions": "log_message_routing_request_msg"
    },

    "message_composer": {
      "name": "Message Composer",
      "role": "compose",
      "instructions": "message_composer_system_msg",
      "request_instructions": "message_composer_request_msg"
    },
    "message_validator": [
      {
        "name": "Jim Curie",
        "role": "validate",
        "instructions": "message_validation_system_msg",
        "request_instructions": "message_validation_request_msg"
        
      },
      {
        "name": "Lisa Bohr",
        "role": "validate",
        "temperature": 1,
        "instructions": "data_validation_system_msg",
        "request_instructions": "data_validation_request_msg"
      },
      {
        "name": "Myrna Pasteur",
        "role": "validate",
        "instructions": "data_validation_system_msg",
        "request_instructions": "data_validation_request_msg"
      }
    ]
    
  }
}
